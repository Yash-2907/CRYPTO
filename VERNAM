#include<bits/stdc++.h>
#include<iostream>
#include<string>
using namespace std;
int main()
{
    string s,ans="";
    char key;
    cout<<"ENTER THE TEXT TO ENCODE :- ";
    cin>>s;
    cout<<"ENTER THE CHARACTER TO USE AS KEY :-";
    cin>>key;
    for(int i=0;i<s.size();i++)
    {
        int temp1=s[i]-97;
        int temp2=key-97;
        char cc=(char)(((temp1^temp2)%26)+97);
        ans=ans+cc;
    }
    cout<<"ENCRYPTED TEXT IS :- "<<ans;
    char ukey;
    s="";
    cout<<"\nENTER CORRECT KEY TO DECRYPT :- ";
    cin>>ukey;
    if(ukey==key)
    {
         for(int i=0;i<ans.size();i++)
         {
             int temp1=ans[i]-97;
             int temp2=ukey-97;
             char cc=(char)(((temp1^temp2)%26)+97);
             s=s+cc;
         }
         cout<<"DECODED TEXT IS :- "<<s;
    }
    else{
        cout<<"INCORRECT KEY!!!!";
    }
    return 0;
}
